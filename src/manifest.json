{
    "name": "guardjs",
    "version": "0.0.3",
    "description": "Declare whether the page has any malicious javascript file!",
    "manifest_version": 2,
    "icons": {
        "16": "src/icon/icon16.png",
        "48": "src/icon/icon48.png",
        "128": "src/icon/icon128.png"
    },
    "permissions": [
        "tabs",
        "activeTab"
    ],
    "background": {
        "scripts": [
            "app/init.js",
            "app/browserEvents.js",
            "app/content.js",
            "app/mainCheck.js"
        ]
    },
    "browser_action": {
        "default_icon": "src/icon/blue.png",
        "default_title": "guardjs",
        "default_popup": "page/popup/index.html"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "app/content.js"
            ]
        }
    ],
    "options_page": "options.html",
    "commands": {
        "toggle-popup": {
            "suggested_key": {
                "default": "Alt+Shift+E",
                "mac": "Command+Shift+E"
            },
            "description": "Show extension popup"
        }
    }
}